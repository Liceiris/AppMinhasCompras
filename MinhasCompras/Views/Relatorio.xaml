<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="MinhasCompras.Views.NovoProduto"
             Title="NovoProduto">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked_1" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Data da Compra:" />
        <DatePicker x:Name="dtp_dataCompra"
            Format="dd/MM/yyyy"
            Date="{x:Static sys:DateTime.Now}" />
        
        <Label Text="Descrição do Produto:" />
        <Entry x:Name="txt_descricao" />

        <Label Text="Quantidade:" />
        <Entry x:Name="txt_quantidade" Keyboard="Numeric" />

        <Label Text="Preço Unitário:" />
        <Entry x:Name="txt_preco" Keyboard="Numeric" />
    </VerticalStackLayout>
</ContentPage>