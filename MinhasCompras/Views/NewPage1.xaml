<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MinhasCompras.Models"
             x:Class="MinhasCompras.Views.NewPage1"
             Title="Relatório">

    <VerticalStackLayout Padding="10">
        <Label Text="Selecione o período:" FontAttributes="Bold" />

        <HorizontalStackLayout Spacing="10">
            <DatePicker x:Name="dt_inicio" />
            <DatePicker x:Name="dt_fim" />
        </HorizontalStackLayout>
        <Button Text="Filtrar" Clicked="Button_Clicked"/>

        <ListView x:Name="lst_relatorio">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Descricao}"
                              Detail="{Binding DataCadastro, StringFormat='Data: {0:dd/MM/yyyy}'}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>